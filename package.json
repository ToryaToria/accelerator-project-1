    "stylelint": "^16.26.1",
    "stylelint-config-htmlacademy": "^4.4.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "svgo": "^4.0.0",
    "vinyl-fs": "^4.0.2",
    "vite": "^7.3.0",
    "vite-plugin-image-optimizer": "^2.0.3",
    "vite-plugin-minify": "^2.1.0",
    "vitest": "^4.0.16",
    "w3c-html-validator": "^2.1.0"
