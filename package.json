    "@spiriit/vite-plugin-svg-spritemap": "^6.0.0",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "cli-progress": "^3.12.0",
    "eslint": "^9.39.2",
    "eslint-config-htmlacademy": "^10.0.1",
    "gh-pages": "^6.3.0",
    "glob": "^13.0.0",
    "gulp-html-bemlinter": "^5.0.1",
    "html-validate": "^10.5.0",
    "linthtml-config-htmlacademy": "^1.1.0",
